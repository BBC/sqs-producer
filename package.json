{
  "name": "sqs-producer",
  "version": "1.6.3",
  "description": "Enqueues messages onto a given SQS queue",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "coverage": "nyc mocha && nyc report --reporter=html && nyc report --reporter=json-summary",
    "lint": "eslint '**/**.js'",
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "clean": "rm -fr dist/*"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbc/sqs-producer.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/sqs-producer/issues"
  },
  "keywords": [
    "aws",
    "sqs",
    "producer",
    "queue"
  ],
  "homepage": "https://github.com/bbc/sqs-producer",
  "dependencies": {
    "aws-sdk": "^2.393.0",
    "ts-node-register": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/debug": "^4.1.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@types/sinon": "^9.0.0",
    "chai": "^4.2.0",
    "codeclimate-test-reporter": "^0.5.1",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "sinon": "^9.0.2",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.3.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "eslint:recommended"
  },
  "eslintIgnore": [
    "node_modules",
    "lib-cov",
    ".nyc_output",
    "coverage"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
